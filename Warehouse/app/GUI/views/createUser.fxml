<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="800.0" prefWidth="1050.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.gui.Controllers.CreateUser">
   <children>
      <Label layoutX="29.0" layoutY="26.0" text="Създаване на Потребител">
         <font>
            <Font name="System Bold" size="36.0" />
         </font>
      </Label>
      <VBox layoutX="31.0" layoutY="97.0" prefHeight="315.0" prefWidth="300.0" spacing="15.0">
         <children>
            <TextField fx:id="fullName" prefHeight="25.0" prefWidth="240.0" promptText="Име">
               <font>
                  <Font size="16.0" />
               </font>
            </TextField>
            <TextField fx:id="username" prefHeight="25.0" prefWidth="240.0" promptText="Потребителско име">
               <font>
                  <Font size="16.0" />
               </font>
            </TextField>
            <PasswordField fx:id="password" prefHeight="25.0" prefWidth="240.0" promptText="Парола">
               <font>
                  <Font size="16.0" />
               </font>
            </PasswordField>
            <PasswordField fx:id="passwordConfirm" prefHeight="25.0" prefWidth="240.0" promptText="Потвърди паролата">
               <font>
                  <Font size="16.0" />
               </font>
            </PasswordField>
            <CheckBox fx:id="adminCheckbox" mnemonicParsing="false" text="Администратор">
               <font>
                  <Font size="16.0" />
               </font>
            </CheckBox>
            <Button fx:id="submitForm" mnemonicParsing="false" onAction="#submitForm" prefHeight="35.0" prefWidth="300.0" text="Създай">
               <font>
                  <Font size="16.0" />
               </font>
            </Button>
         </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
      </VBox>
   </children>
</AnchorPane>
