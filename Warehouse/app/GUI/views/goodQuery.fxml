<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="800.0" prefWidth="1050.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.gui.Controllers.GoodQuery">
   <children>
      <VBox prefHeight="800.0" prefWidth="1050.0" spacing="25.0">
         <children>
            <HBox alignment="CENTER_LEFT" prefHeight="104.0" prefWidth="1014.0" spacing="15.0">
               <children>
                  <Label prefHeight="53.0" prefWidth="321.0" text="Справка за Стока">
                     <font>
                        <Font name="System Bold" size="36.0" />
                     </font>
                  </Label>
                  <TextField fx:id="goodField" prefHeight="37.0" prefWidth="182.0" promptText="Име на Стоката">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </TextField>
                  <Button fx:id="button" mnemonicParsing="false" onAction="#submitButtonClicked" prefHeight="37.0" prefWidth="104.0" text="Търсене">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </Button>
               </children>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </HBox>
            <Label fx:id="priceLabel" prefHeight="64.0" prefWidth="307.0">
               <font>
                  <Font name="System Bold" size="30.0" />
               </font>
            </Label>
            <Label fx:id="quantityLabel" prefHeight="64.0" prefWidth="307.0">
               <font>
                  <Font name="System Bold" size="30.0" />
               </font>
            </Label>
         </children>
         <padding>
            <Insets left="10.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>
